(in-microtheory CS371-MusicMoodClassification)

;; backward-chaining 
(<== (songMood ?song happy)
     (BeatOfSong ?song high)
     (songPitch ?song high)
     (EnergyOfSong ?song medium))


(<== (songMood ?song exuberant)
     (BeatOfSong ?song high)
     (songPitch ?song high)
     (EnergyOfSong ?song high))


(<== (songMood ?song energetic)
     (BeatOfSong ?song high)
     (songPitch ?song medium)
     (EnergyOfSong ?song high))


(<== (songMood ?song frantic)
     (BeatOfSong ?song high)
     (songPitch ?song low)
     (EnergyOfSong ?song high))


(<== (songMood ?song anxious)
     (BeatOfSong ?song low)
     (songPitch ?song low)
     (EnergyOfSong ?song medium))


(<== (songMood ?song depressed)
     (BeatOfSong ?song low)
     (songPitch ?song low)
     (EnergyOfSong ?song low))


(<== (songMood ?song calm)
     (BeatOfSong ?song low)
     (songPitch ?song medium)
     (EnergyOfSong ?song low))


(<== (songMood ?song content)
     (BeatOfSong ?song low)
     (songPitch ?song high)
     (EnergyOfSong ?song low))
